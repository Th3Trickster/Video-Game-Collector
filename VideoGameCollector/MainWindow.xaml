<Window x:Class="VideoGameCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGameCollector"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="Dashboard" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Grid for holding all left side panel contents.
             Added to first column of the default grid. -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <!-- Username Row #0 -->
                <RowDefinition Height="Auto"/>
                <!-- Dashboard Row #1 -->
                <RowDefinition Height="Auto"/>
                <!-- Games Row #2-->
                <RowDefinition Height="Auto"/>
                <!-- Consoles Row #3 -->
                <RowDefinition Height="Auto"/>
                <!-- Peripherals Row #4 -->
                <RowDefinition Height="Auto"/>
                <!-- Export Row #5 -->
                <RowDefinition Height="Auto"/>
                <!-- Settings Row #6 -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Username Label -->
            <Label Content="Username Placeholder"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="0 20 0 0"
                   Padding="0 0 0 30"/>
            
            <!-- Line below Username -->
            <Line Stroke="Gray"
                  Opacity="0.5"
                  X1="250"
                  StrokeThickness="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"/>

            <!-- Dashboard Button -->
            <Button Grid.Row="1"
                    Width="250"
                    Margin="0 30 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image/>
                    <TextBlock Text="Dashboard"/>
                </StackPanel>
            </Button>
            <!--<Button Content="Dashboard"
                    Grid.Row="1"
                    Width="250"
                    Margin="0 30 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>-->

            <!-- Games Button -->
            <Button Content="Games"
                    Grid.Row="2"
                    Width="250"
                    Margin="0 15 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            
            <!-- Consoles Button -->
            <Button Content="Consoles"
                    Grid.Row="3"
                    Width="250"
                    Margin="0 15 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            
            <!-- Peripherals Button -->
            <Button Content="Peripherals"
                    Grid.Row="4"
                    Width="250"
                    Margin="0 15 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>

            <!-- Export Button -->
            <Button Content="Export"
                    Grid.Row="5"
                    Width="250"
                    Margin="0 15 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            
            <!-- Settings Button -->
            <Button Content="Settings"
                    Grid.Row="6"
                    Width="250"
                    Margin="0 15 0 0"
                    Height="50"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </Grid>
    </Grid>
</Window>
